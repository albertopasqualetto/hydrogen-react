{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*",
    "globals.d.ts"
  ],
  "exclude": [
    "src/**/*.test.tsx",
    "src/**/*.test.ts", 
    "src/**/*.stories.tsx",
    "src/**/*.test.helpers.ts",
    "src/**/*.doc.ts",
    "src/**/*.example.jsx",
    "src/**/*.example.tsx",
    "src/**/*.example.js",
    "src/**/*.example.ts"
  ]
}