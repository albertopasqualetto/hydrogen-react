{
  "name": "@shopify/hydrogen-react",
  "version": "2025.5.0",
  "description": "React components, hooks, and utilities for creating custom Shopify storefronts",
  "homepage": "https://github.com/Shopify/hydrogen/tree/main/packages/hydrogen-react",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "files": [
    "dist",
    "storefront.schema.json",
    "customer-account.schema.json"
  ],
  "type": "commonjs",
  "exports": {
    ".": {
      "react-native": "./dist/index.js",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./storefront-api-types": "./dist/storefront-api-types.d.ts",
    "./storefront.schema.json": "./storefront.schema.json",
    "./customer-account.schema.json": "./customer-account.schema.json",
    "./customer-account-api-types": "./dist/customer-account-api-types.d.ts",
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "storefront-api-types": [
        "./dist/types/storefront-api-types.d.ts"
      ]
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "react-native": "./dist/index.js",
  "sideEffects": false,
  "scripts": {
    "build-docs": "sh ./docs/build-docs.sh && npm run format",
    "clean-dist": "rimraf ./dist",
    "dev": "npm run build -- --watch",
    "build": "npm run clean-dist && npm run build:compile && npm run build:types && npm run copy-api-types",
    "build:compile": "tsc --project tsconfig.build.json",
    "build:types": "tsc --emitDeclarationOnly --project tsconfig.build.json --declarationDir ./dist",
    "copy-api-types": "cpy './src/storefront-api-types.d.ts' './src/customer-account-api-types.d.ts' ./dist/ --flat",
    "format": "prettier --write \"{src,docs}/**/*\" --ignore-unknown",
    "graphql-types": "graphql-codegen --config codegen.ts && npm run format",
    "test": "jest",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "preview-docs": "npm run dev --prefix ../../docs/preview"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.4.0",
    "@graphql-codegen/add": "^5.0.3",
    "@graphql-codegen/cli": "^5.0.4",
    "@graphql-codegen/introspection": "^4.0.3",
    "@graphql-codegen/typescript": "^4.1.3",
    "@ladle/react": "^5.0.1",
    "@shopify/generate-docs": "0.16.4",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "cpy-cli": "^5.0.0",
    "eslint": "9.19.0",
    "eslint-config-prettier": "10.0.1",
    "eslint-import-resolver-typescript": "3.7.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jest": "28.11.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.37.4",
    "eslint-plugin-react-hooks": "5.1.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-tsdoc": "0.2.14",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "^0.81.4",
    "rimraf": "^6.0.1",
    "ts-expect": "^1.3.0",
    "ts-jest": "^29.2.5",
    "typescript": "5.9.2"
  },
  "peerDependencies": {
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "^0.81.4"
  },
  "dependencies": {
    "@google/model-viewer": "^4.0.0",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@xstate/fsm": "2.0.0",
    "@xstate/react": "3.2.1",
    "graphql": "^16.10.0",
    "use-isomorphic-layout-effect": "1.1.2",
    "use-sync-external-store": "1.2.0",
    "type-fest": "^4.33.0",
    "worktop": "^0.7.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Shopify/hydrogen.git",
    "directory": "packages/hydrogen-react"
  },
  "bugs": "https://github.com/shopify/hydrogen/issues"
}
